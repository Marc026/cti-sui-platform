{
  "name": "cti-platform-api",
  "version": "1.0.0",
  "description": "REST API for CTI Platform on Sui Blockchain",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docs": "apidoc -i src/ -o docs/",
    "docker:build": "docker build -t cti-platform-api .",
    "docker:run": "docker run -p 3000:3000 cti-platform-api"
  },
  "keywords": [
    "api",
    "rest",
    "blockchain",
    "sui",
    "cti",
    "cybersecurity"
  ],
  "author": "Marc Lapira",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui.js": "^0.45.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "redis": "^4.6.8",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "pg": "^8.11.3",
    "knex": "^2.5.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "apidoc": "^1.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}